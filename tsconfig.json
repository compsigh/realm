{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "allowJs": true,
    "strict": false,
    "sourceMap": true,
  },
  "include": ["src/**/*.mjs", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
